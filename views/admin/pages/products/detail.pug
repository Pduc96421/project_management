extends ../../layouts/default.pug

block main
    h1(class="mb-4") Chi tiết sản phẩm

    if (product.title)
        div(class="mb-4") #{product.title}

    if (product.price)
        div(class="mb-4") Giá: <b>#{product.price}</b>

    if (product.discountPercentage)
        div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}</b>
    
    if (product.stock)
        div(class="mb-4") Còn lại: <b>#{product.stock}</b>

    if (product.thumbnail)
        div(class="mb-4") 
            img(
                src=product.thumbnail 
                style="width: 100px" 
            )
    
    if (product.status)
        div(class="mb-4")
            span Trạng thái: 
            if (product.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động

    if (product.position)
        div(class="mb-4") Vị trí: <b>#{product.position}</b>

    if (product.description)
        div(class="mb-4") doctype html
        html(lang="en")
            head
                meta(charset="UTF-8")
                meta(name="viewport", content="width=device-width, initial-scale=1.0")
                title Document
            body {product.description}

    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class="btn btn-warning"
    ) Chỉnh sửa

    script(src="/admin/js/product.js")