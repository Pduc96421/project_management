mixin pagination(pagination)
    nav 
        ul(class="pagination")
            if (pagination.currentPage > 1)
                li(class="page-item")
                    button(
                        class="page-link" 
                        button-pagination=pagination.currentPage - 1  
                    ) Trang trước

            - let currentPage = pagination.currentPage;
            - let totalPage = pagination.totalPage;
            - let pageBegin = currentPage - 1 < 1 ? 1 : currentPage - 1;
            - let pageEnd = currentPage + 1 > totalPage ? totalPage : currentPage + 1; 

            - for (let i = pageBegin; i <= pageEnd; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button(
                        class="page-link"
                        button-pagination=i
                    ) #{i}

            if (pagination.currentPage < pagination.totalPage)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage + 1
                    ) Kế tiếp