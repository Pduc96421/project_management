mixin alert-success(time)
    - if (messages.success)
        .message.info
            div(
                class="alert-success"
                show-alert
                data-time=time
            ) <span>#{messages.success}</span> <span close-alert>X</span>

mixin alert-error(time)
    - if (messages.error)
        .message.info
            div(
                class="alert-danger"
                show-alert
                data-time=time
            ) <span>#{messages.error}</span> <span close-alert>X</span>